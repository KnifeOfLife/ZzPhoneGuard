<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_appmanager_listview_item_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/app"/>

    <TextView
        android:layout_margin="5dp"
        android:id="@+id/tv_appmanager_listview_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_appmanager_listview_item_icon"
        android:text="计算机"
        android:textColor="#000000"/>

    <TextView
        android:layout_margin="5dp"
        android:id="@+id/tv_appmanager_listview_item_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_appmanager_listview_item_title"
        android:layout_toRightOf="@id/iv_appmanager_listview_item_icon"
        android:text="计算"
        android:textColor="#000000"/>


    <TextView
        android:id="@+id/tv_appmanager_listview_item_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="大小"
        android:textColor="#000000"/>


</RelativeLayout>