<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="90dp"
        android:gravity="center"
        android:background="@drawable/header_bg">

        <TextView
            android:id="@+id/tv_lockedactivity_unlocked"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未加锁"
            android:textColor="#ffffff"
            android:background="@drawable/tab_left_pressed"/>

        <TextView
            android:id="@+id/tv_lockedactivity_locked"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已加锁"
            android:textColor="#ffffff"
            android:background="@drawable/tab_right_default"/>

    </LinearLayout>
    <FrameLayout
        android:id="@+id/fl_lockedactivity_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

</LinearLayout>